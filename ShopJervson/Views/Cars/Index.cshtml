@model IEnumerable<ShopJervson.Models.Car.CarIndexViewModel>
@{
    int rowNumber = 1;
}
<div class="h1">Cars</div>
<div>
    <a asp-action="Create" asp-controller="cars" type="submit" class="btn btn-primary">Create</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Brand</th>
                <th scope="col">YearBuilt</th>
                <th scope="col">Color</th>
                <th scope="col">ZeroToHundred</th>
                <th scope="col">FuelConsumption</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@car.Brand</td>
                    <td>@car.YearBuilt</td>
                    <td>@car.Color</td>
                    <td>@car.ZeroToHundred</td>
                    <td>@car.FuelConsumption</td>
                    <td>
                        <a asp-action="details" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="delete" asp-controller="cars" asp-route-id="@car.Id" type="submit" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>